{
  "swagger": "2.0",
  "info": {
    "title": "Task Manager API",
    "description": "API documentation for the Task Manager application",
    "version": "1.0.0"
  },
  "host": "task-as5j.onrender.com", 
  "basePath": "/",
  "schemes": [
    "https" 
  ],
  "securityDefinitions": {
    "apiKey": {
      "type": "apiKey",
      "in": "header",
      "name": "apiKey",
      "description": "API Key needed to access the endpoints"
    }
  
  },
  "paths": {
    "/tasks": {
      "get": {
        "description": "Fetch all tasks",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Task"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new task",
        "parameters": [
          {
            "in": "body",
            "name": "task",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Task Created",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "description": "Fetch a task by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "404": {
            "description": "Task Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Update a task by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "task",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task Updated",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "404": {
            "description": "Task Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a task by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Task Deleted"
          },
          "404": {
            "description": "Task Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "Complete Homework"
        },
        "description": {
          "type": "string",
          "example": "Math and History assignments"
        },
        "dueDate": {
          "type": "string",
          "format": "date",
          "example": "2025-02-10"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "completed"],
          "example": "pending"
        }
      },
      "required": ["title", "description", "dueDate", "status"]
    }
  },
  "security": [
    {
      "apiKey": []
    }
  ]
}
